<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
	<parameters>
		<parameter key="scheb_two_factor.security.sms.provider">Scheb\TwoFactorBundle\Security\TwoFactor\Provider\SMS\TwoFactorProvider</parameter>
		<parameter key="scheb_two_factor.security.sms.challenge_sender.nexmo">Scheb\TwoFactorBundle\Security\TwoFactor\Provider\SMS\Sender\NexmoSender</parameter>
	</parameters>
	<services>

		<service id="scheb_two_factor.security.sms.provider" class="%scheb_two_factor.security.sms.provider.class%">
			<tag name="scheb_two_factor.provider" alias="sms" />
			<argument type="service" id="scheb_two_factor.backup_code_validator" />
			<argument type="service" id="%scheb_two_factor.sms.provider%" />
			<argument type="service" id="templating" />
			<argument>%scheb_two_factor.parameter_names.auth_code%</argument>
			<argument>%scheb_two_factor.sms.digits%</argument>
			<argument>%scheb_two_factor.sms.failOpen%</argument>
			<argument>%scheb_two_factor.sms.formTemplate%</argument>
			<argument>%scheb_two_factor.sms.errorTemplate%</argument>
		</service>


		<service id="scheb_two_factor.security.sms.challenge_sender.nexmo" class="%scheb_two_factor.security.sms.challenge_sender.nexmo%">
			<argument>%scheb_two_factor.sms.nexmo.username%</argument>
			<argument>%scheb_two_factor.sms.nexmo.password%</argument>
			<argument>%scheb_two_factor.sms.nexmo.fromNumber%</argument>
		</service>

	</services>
</container>
